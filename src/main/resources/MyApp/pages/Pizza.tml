<html t:type="layout" title="Menu"
      xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd"
      xmlns:p="tapestry:parameter"
        >


    <h1>Pizza</h1>
    <t:grid source="products" row="product" rowsPerPage= "10"   include= "price, name, specification, basket">

        <p:basketCell>

        <t:actionlink t:id = "makeBasket"    value="product.id"    context="product.id" >${product.basket} </t:actionlink>
        <!--
        <t:pagelink page="Bid" context="product.name">${product.number}   </t:pagelink>
        -->
        </p:basketCell>

<!--
    include="price, name, specification, number"/>
-->
    </t:grid>


    <strong> In your basket: ${productID}</strong>
</html>
